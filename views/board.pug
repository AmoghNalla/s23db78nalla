extends layout

block content
  h1= title
  - let rows=Number(query.rows);
  - let cols=Number(query.cols);
  p Query Parameters : Rows : #{rows} ,Cols : #{cols}
  if (!(Number.isInteger(rows) || Number.isInteger(cols)))
    p Query parameters must be valid integers 
  else if(rows<1 || rows>10)
    p Rows must be in the range of 1 to 10
  else if(cols<1 || cols>10)
    p Columns must be in the range of 1 to 10
  else
    table#outer
      - for(let i=0;i<rows;i++){
        tr#middle
          - for(let j=0;j<cols;j++){
            td=computeValue(i,j)

          -}
      -}  
  -
    function computeValue(row,col){
      if(row==col){
          return 1;
      }
      else if(row==col+1){
          return 2;
      }
      else if(row==col-1){
          return row;
      }
      else{
          return 0;
      }

    }